{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitOverride": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": { "plotly.js-basic-dist-min": ["node_modules/@types/plotly.js"] }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["src/mcp"]
}
